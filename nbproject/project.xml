<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://www.netbeans.org/ns/project/1">
    <type>org.netbeans.modules.java.j2seproject</type>
    <configuration>
        <data xmlns="http://www.netbeans.org/ns/j2se-project/3">
            <name>ARENAv2</name>
            <source-roots>
                <root id="src.dir" name="src"/>
                <root id="src.dir" name="src"/>
            </source-roots>
            <test-roots>
                <root id="test.src.dir"/>
            </test-roots>
        </data>
    </configuration>
    <target name="test-junit5">
        <taskdef name="junitplatform"
                 classname="org.junit.platform.console.tasks.ConsoleLauncherTask"
                 classpathref="test.classpath" />
        <mkdir dir="${build.test.results.dir}" />
        <junitplatform scanClassPath="true"
                       details="tree"
                       reportsDir="${build.test.results.dir}" />
    </target>
</project>
